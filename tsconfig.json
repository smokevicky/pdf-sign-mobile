{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
    ,
    "baseUrl": "./src",
    "paths": {
      "@atoms": ["components/atoms/index.ts"],
      "@molecules": ["components/molecules/index.ts"],
      "@pages": ["components/pages/index.ts"],
      "@store": ["store/index.ts"],
    }
  },
  "include": [
    "src"
  ]
}
